{
  "manifest_version": 3,
  "name": "",
  "version": "",
  "description": "Hide page elements with a DevTools-like picker",
  "permissions": ["storage", "sidePanel", "contextMenus"],
  "side_panel": {
    "default_path": "src/popup/index.html"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "action": {},
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": ""
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/early-inject.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.tsx"],
      "css": ["src/content/picker.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  }
}
